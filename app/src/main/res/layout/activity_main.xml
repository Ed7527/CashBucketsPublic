<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edwardtorpy.cashbucketspublic.EditIndividualBucket">

    <EditText
        android:id="@+id/totalCashEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Enter total of funds available"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="enterTotalCash"
        android:text="Update total funds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalCashEditText" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculateButton">

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:rowCount="5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/reserveTextView"
                android:layout_width="35dp"
                android:layout_height="360dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="4"
                android:scrollHorizontally="true"
                android:text="$\n2\n0\n,\n0\n0\n0"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:verticalScrollbarPosition="left"
                app:srcCompat="@drawable/reserve" />



            <TextView
                android:id="@+id/textView0"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="0"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="3"
                android:layout_row="3"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="2"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="4"
                android:layout_row="3"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="3"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="4"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/essentialbucket"
                android:onClick="openEditBucketActivity"
                android:tag="5"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="3"
                android:layout_row="2"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="6"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="4"
                android:layout_row="2"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="7"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="8"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="9"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="10"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="4"
                android:layout_row="1"
                android:background="@drawable/regularbucket"
                android:onClick="openEditBucketActivity"
                android:tag="11"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/singleusebucket"
                android:onClick="openEditBucketActivity"
                android:tag="12"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@drawable/singleusebucket"
                android:onClick="openEditBucketActivity"
                android:tag="13"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="3"
                android:layout_row="0"
                android:background="@drawable/singleusebucket"
                android:onClick="openEditBucketActivity"
                android:tag="14"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_column="4"
                android:layout_row="0"
                android:background="@drawable/singleusebucket"
                android:onClick="openEditBucketActivity"
                android:tag="15"
                android:textColor="@android:color/black" />

        </GridLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>